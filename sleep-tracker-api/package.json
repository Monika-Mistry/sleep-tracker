{
  "name": "sleep-tracker-api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "serve": "node dist/index.js",
    "db:create-migrations": "drizzle-kit generate:pg",
    "db:drop-migrations": "drizzle-kit drop",
    "db:run-migrations": "npx --yes tsx ./src/drizzle/migrate.ts",
    "db:update": "yarn db:create-migrations && yarn db:run-migrations"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "drizzle-kit": "^0.20.14",
    "express": "^4.19.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "drizzle-orm": "^0.30.8",
    "drizzle-zod": "^0.5.1",
    "postgres": "^3.4.4",
    "zod": "^3.22.4"
  }
}
